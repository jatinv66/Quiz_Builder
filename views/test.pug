doctype html
html
    head
        title Quiz Builder
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        nav.navbar.navbar-inverse
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/tests/testAttempt/'+user._id+'/set/'+set) Quiz Builder
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/tests/testAttempt/'+user._id+'/set/'+set) Home
                    ul.nav.navbar-nav.navbar-right
                        if user
                            li 
                                a(href='/users/logout') logout
                        else    
                            li
                                a(href='/users/register') Registration
                            li
                                a(href='/users/login') Login
                            li
                                a(href='/admins/login') Admin Login
        .container
            !=messages('message',locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}
            block content
                    h1 Set:#{set}
                    h1 #{title}
                        ul.list-group
                            each question,i in questions
                                li.list-group-item
                                    a(href="/questions/"+question.quesID+'/'+set)=question.description
                    a.btn.btn-default(href='/responses/submit/'+user._id+'/'+set) I Am Done With Test